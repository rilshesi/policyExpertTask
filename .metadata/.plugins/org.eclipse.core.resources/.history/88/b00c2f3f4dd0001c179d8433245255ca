			String bedroomNum = bathRoomNum.getText();
			int bathInt = Integer.parseInt(bedroomNum);
			if(bathInt==1){
				{
					bathRoomNum.click();
					break;
				}
			}		
		}
		
		
		
		
		l3.getmainResidentYes().click();
		
